generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id   Int    @id(map: "Author_pk") @default(autoincrement())
  name String @unique @db.VarChar(30)
  Book Book[]
}

model Book {
  id          Int      @id(map: "Book_pk") @default(autoincrement())
  name        String   @unique
  categoryId  Int
  authorId    Int
  read        Boolean
  publisherId Int
  Category    Category @relation(fields: [categoryId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Book_fk0")
  Author      Author   @relation(fields: [authorId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Book_fk1")
}

model Category {
  id   Int    @id(map: "Category_pk") @default(autoincrement())
  name String @unique @db.VarChar(30)
  Book Book[]
}
