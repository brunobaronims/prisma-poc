generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id        Int     @id(map: "Author_pk") @default(autoincrement())
  countryId Int
  Country   Country @relation(fields: [countryId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Author_fk0")
  Book      Book[]
}

model Book {
  id          Int       @id(map: "Book_pk") @default(autoincrement())
  name        String    @unique
  categoryId  Int
  authorId    Int
  read        Boolean
  publisherId Int
  Category    Category  @relation(fields: [categoryId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Book_fk0")
  Author      Author    @relation(fields: [authorId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Book_fk1")
  Publisher   Publisher @relation(fields: [publisherId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Book_fk2")
}

model Category {
  id   Int    @id(map: "Category_pk") @default(autoincrement())
  name String @unique @db.VarChar(30)
  Book Book[]
}

model Country {
  id        Int         @id(map: "Country_pk") @default(autoincrement())
  name      String      @unique @db.VarChar(50)
  Author    Author[]
  Publisher Publisher[]
}

model Publisher {
  id        Int     @id(map: "Publisher_pk") @default(autoincrement())
  name      String  @unique @db.VarChar(30)
  countryId Int
  Book      Book[]
  Country   Country @relation(fields: [countryId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Publisher_fk0")
}
